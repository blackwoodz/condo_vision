<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

      <dt>Owner?</dt>
      <dd><%= @user.owner? %></dd>

      <dt>Resident?</dt>
      <dd><%= @user.resident? %></dd>

      <dt>Board member?</dt>
      <dd><%= @user.board_member? %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
