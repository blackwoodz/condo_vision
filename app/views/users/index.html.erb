<div class="page-header">
  <h1>
    Directory for 949 Lake
  </h1>
</div>

<div class="row">
  <div class="col-md-2 card">
    <h4>Groups</h4>
    <br>
    <a href="/users">All</a>
    <hr>
    <a href="/users/owners">Owners</a>
    <hr>
    <a href="/users/residents">Residents</a>
    <hr>
    <a href="/users/board_members">Board Members</a>
    <hr>
  </div>

  <div class="col-md-10">
    <table class="table table-striped table-hover card">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Contact phone number</th>
        <th>Owner of:</th>
        <th>Resident of:</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.contact_phone_number %></td>
        <td>
          <% if user.owned_units != nil %>
            <%= user.owned_units.pluck(:unit_number).to_sentence(words_connector: ', ', last_word_connector: ' and ') %>
          <% end %>
        </td>
        <td>
          <% if user.occupied_units != nil %>
            <% user.occupied_units.pluck(:unit_number).to_sentence(words_connector: ', ', last_word_connector: ' and ') %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
