<div class="page-header">
  <h1>
    Units in 949 Lake
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Unit number</th>
        <th>Owner</th>
        <th>Tenant</th>
        <!-- <th>Monthly dues</th> -->
      </tr>

      <% @units.each do |unit| %>
      <tr>
        <td><%= unit.unit_number %></td>
        <td>
          <% if unit.owner != nil %>
          <%= unit.owner.first_name %> <%= unit.owner.last_name %>
          <% end %>
        </td>
        <td>
          <% if unit.tenant != nil %>
          <%= unit.tenant.first_name %> <%= unit.tenant.last_name %>
          <% end %>
        </td>
        <!-- <td>$ <%= unit.monthly_dues %></td> -->
      </tr>
      <% end %>
    </table>
    <%= paginate @units, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
