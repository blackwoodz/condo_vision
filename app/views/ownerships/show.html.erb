<div class="page-header">
  <h3>Ownership #<%= @ownership.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Owner</dt>
      <dd>
        <% if @ownership.owner.present? %>
          <a href="/users/<%= @ownership.owner_id %>">
            <%= @ownership.owner.email %>
          </a>
        <% end %>
      </dd>

      <dt>Unit</dt>
      <dd>
        <% if @ownership.unit.present? %>
          <a href="/units/<%= @ownership.unit_id %>">
            <%= @ownership.unit.unit_number %>
          </a>
        <% end %>
      </dd>

      <dt>Start date</dt>
      <dd><%= @ownership.start_date %></dd>

      <dt>End date</dt>
      <dd><%= @ownership.end_date %></dd>

      <dt>Recurring payments on</dt>
      <dd><%= @ownership.recurring_payments_on %></dd>

      <dt>Payment token</dt>
      <dd><%= @ownership.payment_token %></dd>

      <dt>Bank authorization</dt>
      <dd><%= @ownership.bank_authorization %></dd>

      <dt>Dues delinquent</dt>
      <dd><%= @ownership.dues_delinquent %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/ownerships" class="btn btn-primary">
        Back
      </a>
      <a href="/ownerships/<%= @ownership.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_ownership/<%= @ownership.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
