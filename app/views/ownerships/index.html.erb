<div class="page-header">
  <h1>
    Ownerships
    <a href="/ownerships/new" class="btn btn-lg btn-success">New Ownership</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "ownerships_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :dues_delinquent_eq, "Dues delinquent" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :dues_delinquent_eq, "1", checked: ((params[:q] && params[:q][:dues_delinquent_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :dues_delinquent_eq, "0", checked: ((params[:q] && params[:q][:dues_delinquent_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :dues_delinquent_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :bank_authorization_cont, "Bank authorization contains" %>
    <%= f.text_field :bank_authorization_cont, :class => "form-control", :placeholder => "Bank authorization contains" %>
  </div>

<div class="form-group">
    <%= f.label :payment_token_cont, "Payment token contains" %>
    <%= f.text_field :payment_token_cont, :class => "form-control", :placeholder => "Payment token contains" %>
  </div>

<div class="form-group">
    <%= f.label :recurring_payments_on_eq, "Recurring payments on" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :recurring_payments_on_eq, "1", checked: ((params[:q] && params[:q][:recurring_payments_on_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :recurring_payments_on_eq, "0", checked: ((params[:q] && params[:q][:recurring_payments_on_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :recurring_payments_on_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
          <%= f.label :end_date, "End date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='end_dategteqPicker'>
                  <%= f.text_field :end_date_gteq, :class => "form-control", :placeholder => "End date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='end_datelteqPicker'>
                  <%= f.text_field :end_date_lteq, :class => "form-control", :placeholder => "End date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#end_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#end_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#end_dategteqPicker').on("dp.change", function (e) {
                  $('#end_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#end_datelteqPicker').on("dp.change", function (e) {
                  $('#end_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :start_date, "Start date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='start_dategteqPicker'>
                  <%= f.text_field :start_date_gteq, :class => "form-control", :placeholder => "Start date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='start_datelteqPicker'>
                  <%= f.text_field :start_date_lteq, :class => "form-control", :placeholder => "Start date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#start_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#start_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#start_dategteqPicker').on("dp.change", function (e) {
                  $('#start_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#start_datelteqPicker').on("dp.change", function (e) {
                  $('#start_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :owner_email_cont, "User email contains" %>
      <%= f.text_field :owner_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :unit_unit_number_cont, "Unit unit_number contains" %>
      <%= f.text_field :unit_unit_number_cont, :class => "form-control", :placeholder => "Unit unit_number contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/ownerships" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#ownerships_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Owner</th>
        <th>Unit</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Recurring payments on</th>
        <th>Payment token</th>
        <th>Bank authorization</th>
        <th>Dues delinquent</th>
        <th>Actions</th>
      </tr>

      <% @ownerships.each do |ownership| %>
      <tr>
        <td>
          <% if ownership.owner.present? %>
            <a href="/users/<%= ownership.owner.id %>">
              <%= ownership.owner.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if ownership.unit.present? %>
            <a href="/units/<%= ownership.unit.id %>">
              <%= ownership.unit.unit_number %>
            </a>
          <% end %>
        </td>
        <td><%= ownership.start_date %></td>
        <td><%= ownership.end_date %></td>
        <td><%= ownership.recurring_payments_on %></td>
        <td><%= ownership.payment_token %></td>
        <td><%= ownership.bank_authorization %></td>
        <td><%= ownership.dues_delinquent %></td>
        <td>
          <a href="/ownerships/<%= ownership.id %>" class="btn btn-primary">Show</a>
          <a href="/ownerships/<%= ownership.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ownership/<%= ownership.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @ownerships, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
